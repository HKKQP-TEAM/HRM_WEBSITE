{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "rootDir": ".",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017", "esnext", "dom"],
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noEmit": true,
    "traceResolution": false
  },
  "include": [
    "./src/*.ts",
    "./src/*.tsx",
    "./src/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./src/**/*.d.tsx",
    "node_modules/@nab/nab-x-react/dist/**/*.d.ts",
    "../../node_modules/@nab/nab-x-react/dist/**/*.d.ts"
  ]
}