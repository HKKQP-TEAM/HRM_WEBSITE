{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "rootDir": ".",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2017",
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noEmit": true,
    "allowJs": true,
    "moduleResolution": "node",
    "traceResolution": false
  },
  "include": [
    "./src/*.ts",
    "./src/*.tsx",
    "./src/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./src/**/*.d.tsx",
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}